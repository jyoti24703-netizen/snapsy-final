    </section>

    <footer class="contact-footer">
      <p>Made with ‚ù§Ô∏è by Jyoti ‚Äî ¬© <span id="year"></span></p>
    </footer>
  </main>

  <script>
    document.getElementById('year').textContent = new Date().getFullYear();

    document.getElementById('demoBtn').onclick = () => {
      document.querySelector('input[name="name"]').value = 'Jyoti Demo';
      document.querySelector('input[name="email"]').value = 'demo@example.com';
      document.querySelector('textarea').value = 'Hi! This is a demo message.';
    };

    const btn = document.getElementById('stayBtn');
    const input = document.getElementById('stayEmail');
    const msg = document.getElementById('stayMsg');

    input.addEventListener('input', () => {
      if (/\S+@\S+\.\S+/.test(input.value)) {
        btn.disabled = false;
        btn.classList.add('enabled');
      } else {
        btn.disabled = true;
        btn.classList.remove('enabled');
      }
    });

    btn.onclick = () => {
      msg.textContent = "‚úÖ Subscribed successfully!";
      msg.style.color = "#ffd166";
      input.value = "";
      btn.disabled = true;
      btn.classList.remove('enabled');
    };
  </script>

</body>
</html>













